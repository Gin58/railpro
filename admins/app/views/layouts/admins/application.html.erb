<!DOCTYPE html>
<html>
<head>
  <title>Admins</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    "admins/application", media: "all" %>
</head>
<body>
<header>
  <nav>
    <% if admin_signed_in? %>
      <strong><%#= link_to current_user.username, pages_show_path %></strong>
      <%= link_to 'プロフィール変更', main_app.edit_admin_registration_path %>
      <%= link_to 'ログアウト', main_app.admin_sign_out_path %>
    <% else %>
      <%= link_to 'サインアップ', main_app.new_admin_registration_path %>
      <%= link_to 'ログイン', main_app.admin_sign_in_path %>
    <% end %>
  </nav>
</header>

<%= yield %>

</body>
</html>
